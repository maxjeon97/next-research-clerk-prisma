datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String      @id @unique
  offers       Offer[]
}

model Offer {
  id         Int        @id @default(autoincrement())
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  amount     Int
  buyer      User       @relation(fields: [buyerId], references: [id])
  buyerId    String
}